<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/mi_fondo"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Busqueda por cÃ³digo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:textSize="23dp"
        android:textColor="#fff"

        />
    <EditText
        android:id="@+id/ed_cod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="55dp"
        android:padding="5dp"
        android:background="#fff"
        android:drawableRight="@drawable/llave"
        android:hint="Ingrese el codigo"
        android:inputType="number"
        android:paddingLeft="25dp"
        />

    <Button
        android:id="@+id/buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="100dp"
        android:drawableRight="@drawable/buscar"
        android:onClick="Buscar"
        android:text="BUSCAR"
        android:background="@drawable/color3"
        android:paddingRight="20dp"
        android:textColor="#fff" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    >

<TextView
    android:id="@+id/tv_close"
    android:layout_width="30dp"
    android:layout_height="wrap_content"
android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="25dp"
    android:textColor="#FF0000"
    android:text="X"
    android:textAlignment="center"
    android:textSize="20dp"
    android:background="@drawable/ovalo"
    android:layout_marginRight="10dp"


    />

</LinearLayout>


</RelativeLayout>

