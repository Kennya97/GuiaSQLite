<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mi_fondo"
    tools:context=".datos">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Técnico en Sistemas Informáticos "
        android:layout_marginTop="25dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textSize="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#D5D3D3"
        android:fontFamily="cursive"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KENNYA CLARISSA CASTRO GARCÍA "
        android:layout_marginTop="5dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#FFD5D3D3"
        android:fontFamily="serif"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="21 A "
        android:layout_marginTop="5dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#FFD5D3D3"
        android:fontFamily="serif"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carnet: 184519 "
        android:layout_marginTop="5dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#FFD5D3D3"
        android:fontFamily="serif"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="368dp"
        android:layout_height="268dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/nuev_foreground" />

</LinearLayout>